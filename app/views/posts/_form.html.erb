<%= render('layouts/errors', :object => @post) %>

<%= form_for @post do |f| %>
  <ul id="new-post">
    <li>
      <%= f.label :author %>
      <%= f.text_field :author %>
    </li>
    <li>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </li>
    <li>
      <%= f.label :url %>
      <%= f.text_field :url %>
    </li>
  <%= f.submit class: "btn btn-default submit-post" %>
<% end %>
