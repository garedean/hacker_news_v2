<% content_for :header_text, "Haaacker News" %>

<% content_for :nav_menu do %>
  <ul class="nav">
    <a href="#">new</a> |
    <a href="#">comments</a> |
    <a href="#">show</a> |
    <a href="#">ask</a> |
    <a href="#">jobs</a> |
    <%= link_to "submit", new_post_path %>
  </ul>

  <a href="#" class="login">login</a>
<% end %>

<div class="row">
  <div class="col-xs-12">
    <ul>
      <% @posts.each_with_index do |post, index| %>
        <li class="post-row">
          <ul>
            <li class="top-row">
              <span class="grayed"><%= index + 1 %>.</span>

              <%= link_to post.title, "https://www.#{post.url}", class: "post-title" %>

              <span class="post-url">
                (<%= post.url %>)
              </span>
            </li>
            <li class="bottom-row">
              by <%= post.author %>
              <%= link_to "#{comment_count(post)} comments", post_path(post), class: "post-title underline" %>
            </li>
          </ul>
        </li>
      <% end %>
    </ul>
  </div>
</div>
